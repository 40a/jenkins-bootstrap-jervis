#!/bin/sh
RPM_BASED=false
DEB_BASED=false

#detect using RedHat based package
if [ -n "${RPM_PACKAGE_NAME}" ]; then
  RPM_BASED=true
fi

if ${RPM_BASED}; then
  [ -e '/etc/sysconfig/@@ARTIFACTNAME@@' ] && source '/etc/sysconfig/@@ARTIFACTNAME@@'
  JENKINS_HOME="${JENKINS_HOME:-@@HOME@@}"
  if [ "$1" -ge 1 ]; then
      #upgrading package
      /sbin/service @@ARTIFACTNAME@@ try-restart > /dev/null 2>&1
  fi
fi

exit 0
